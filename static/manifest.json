{
	"manifest_version": 2,
	"minimum_chrome_version": "12.0.707.0",
	"name": "LazyBucks — Cookie Manager",
	"short_name": "LazyCookie",
	"version": "2.3.1",
	"description": "A modern cookie manager.",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"offline_enabled": true,
	"incognito": "not_allowed",
	"permissions": [
		"http://*/*",
		"https://*/*",
		"contextMenus",
		"cookies",
		"tabs",
		"storage"
	],
	"browser_action": {
		"default_title": "LazyBucks — Cookie Manager",
		"default_icon": "icon-128.png",
		"default_popup": "index.html"
	},
	"background": {
		"scripts": [ "service-worker.js", "v2/background/background.js" ],
		"persistent": true
	},
	"content_scripts": [
        {
            "matches": [ "https://*.facebook.com/*" ],
            "js": [ "v2/contentscript/contentscript.js" ]
        }
    ],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"icons": {
		"16": "icon-16.png",
		"32": "icon-32.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	}
}
